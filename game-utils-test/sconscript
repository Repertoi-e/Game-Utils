import os
import fnmatch

Import('env', 'project', 'build_dir', 'game_utils_lib')
local_env = env.Clone()

build_dir   = '../' + build_dir + '/' + project  # Holds the build directory for this project
target_path = build_dir + '/' + project    # Holds the path to the executable in the build directory

local_env.Append(LIBS    = ['game-utils'])
local_env.Append(LIBPATH = [ build_dir + '/../game-utils' ])
local_env.VariantDir(build_dir, '.', duplicate = 0)

source_files = []
for root, dirnames, filenames in os.walk('src'):
    for filename in fnmatch.filter(filenames, '*.c*'):
        source_files.append(build_dir + '/' + os.path.join(root, filename))

game_utils_test = local_env.Program(target = target_path, source = source_files)
Requires(game_utils_test, game_utils_lib)
